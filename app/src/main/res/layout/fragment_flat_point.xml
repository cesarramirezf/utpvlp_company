                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_c32"
                                android:textSize="@dimen/description_t"
                                android:layout_marginBottom="@dimen/margin_card_bottom"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_c37"
                                android:textSize="@dimen/description_t"
                                android:layout_marginBottom="@dimen/margin_card_bottom"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_d04"
                                android:textSize="@dimen/description_t"
                                android:layout_marginBottom="@dimen/margin_card_bottom"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_d05"
                                android:textSize="@dimen/description_t"
                                android:layout_marginBottom="@dimen/margin_card_bottom"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_d07"
                                android:textSize="@dimen/description_t"
                                android:layout_marginBottom="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>