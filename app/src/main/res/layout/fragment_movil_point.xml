<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MovilPointFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/ubicaicon_t_mp"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_t"
                    android:layout_marginTop="@dimen/margin_card_intern"
                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            app:cardCornerRadius="@dimen/corner_r"
                            app:cardElevation="@dimen/card_e"
                            app:cardUseCompatPadding="true"
                            android:layout_margin="@dimen/margin_card">>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/title_td"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/today_d_mp"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/title_2_t"
                                    android:layout_marginTop="@dimen/margin_card_intern"
                                    android:layout_marginBottom="@dimen/margin_card_bottom"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/today_dir_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/direccion_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/today_sen_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sentido_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginBottom="@dimen/margin_card_bottom"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/view_height"
                                    android:background="@color/black"
                                    android:layout_marginHorizontal="@dimen/margin_horizontal_general"/>

                                <TextView
                                    android:id="@+id/today_dir_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/direccion_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/today_sen_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sentido_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginBottom="@dimen/margin_card_bottom"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>

                                <TextView
                                    android:id="@+id/title_nd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tomorrow_d_mp"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/title_2_t"
                                    android:layout_marginBottom="@dimen/margin_card_bottom"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/next_dir_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/direccion_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/next_sen_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sentido_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginBottom="@dimen/margin_card_bottom"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/view_height"
                                    android:background="@color/black"
                                    android:layout_marginHorizontal="@dimen/margin_horizontal_general"/>
                                <TextView
                                    android:id="@+id/next_dir_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/direccion_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                                <TextView
                                    android:id="@+id/next_sen_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sentido_d_mp"
                                    android:textSize="@dimen/description_t"
                                    android:layout_marginBottom="@dimen/margin_card_intern"
                                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/actaulizar_btn"
                    app:icon="@drawable/ic_refresh"
                    app:iconGravity="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/detalles_t_mp"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_t"
                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="@dimen/corner_r"
                        app:cardElevation="@dimen/card_e"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/margin_card">>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/speed_limit"
                                android:layout_height="@dimen/speed_limit"
                                android:src="@drawable/ic_30_kmph"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/sast_1_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/down_direction_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="@dimen/corner_r"
                        app:cardElevation="@dimen/card_e"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/margin_card">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/speed_limit"
                                android:layout_height="@dimen/speed_limit"
                                android:src="@drawable/ic_40_kmph"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/sast_2_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/up_direction_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="@dimen/corner_r"
                        app:cardElevation="@dimen/card_e"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/margin_card">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/speed_limit"
                                android:layout_height="@dimen/speed_limit"
                                android:src="@drawable/ic_30_kmph"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/sast_3_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/up_direction_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="@dimen/corner_r"
                        app:cardElevation="@dimen/card_e"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/margin_card">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/speed_limit"
                                android:layout_height="@dimen/speed_limit"
                                android:src="@drawable/ic_50_kmph"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/sast_4_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/up_direction_mp"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/infraccion_t_mp"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_t"
                    android:layout_marginBottom="@dimen/margin_card_intern"
                    android:layout_marginHorizontal="@dimen/margin_card_intern"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        app:cardCornerRadius="@dimen/corner_r"
                        app:cardElevation="@dimen/card_e"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/margin_card">>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/infr_c29"
                                android:textSize="@dimen/description_t"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_card_intern"
                                android:layout_marginBottom="@dimen/margin_card_intern"
                                android:layout_marginHorizontal="@dimen/margin_card_intern"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>